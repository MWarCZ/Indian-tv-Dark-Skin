{

  "manifest_version": 2,

  "name": "Indian-tv Dark Skin",
  "description": "Doplněk upravuje vzhled webu 'https://indian-tv.cz' do tmavých barev. Ikona doplňku je aktivní pouze na webu 'https://indian-tv.cz'.",
  "author": "MWarCZ",
  "version": "3.1",

  "content_scripts": [
    {
      "matches": ["https://indian-tv.cz/*"],
      "css": ["main.css"],
      "js": ["xxx.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://indian-tv.cz/porad/90vterin/*", "https://indian-tv.cz/porad/90vterin"],
      "css": ["90vterin.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://indian-tv.cz/porad/top5/*", "https://indian-tv.cz/porad/top5"],
      "css": ["top5.css"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://indian-tv.cz/porad/liveplay/*" ,"https://indian-tv.cz/porad/liveplay"],
      "css": ["liveplay.css"],
      "run_at": "document_end"
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": "icon/indian-red.png",
    "default_title": "Indian-tv Dark Skin"
  },

  "icons": { 
    "16": "icon/indian-red16.png",
    "48": "icon/indian-red48.png",
    "128": "icon/indian-red128.png"
  },

  "permissions": [
    "tabs",
    "https://indian-tv.cz/*",
    "webNavigation"
  ]

}
