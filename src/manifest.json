{

  "manifest_version": 2,

  "name": "Indian-tv Dark Skin",
  "description": "Doplněk upravuje vzhled webu 'https://indian-tv.cz' do tmavých barev. Ikona doplňku je aktivní pouze na webu 'https://indian-tv.cz'. Při kliknutí na ikonu se dopňěk pozastaví nebo opět spustí. ",
  "author": "MWarCZ",
  "version": "2.0",

  "content_scripts": [
    {
      "matches": ["https://indian-tv.cz/*"],
      "css": ["xxx.css"],
      "js": ["xxx.js"]
    }
  ],

  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },

  "page_action": {
    "default_icon": "icon/indian-red.png",
    "default_title": "Indian-tv Dark Skin"
  },

  "icons": { 
    "16": "icon/indian-red16.png",
    "48": "icon/indian-red48.png",
    "128": "icon/indian-red128.png"
  },

  "permissions": [
    "tabs",
    "https://indian-tv.cz/*",
    "webNavigation"
  ]

}
